{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "isolatedModules": false,
    "noEmit": false,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "src"
  },
  "include": ["./ts/index.ts"]
}